<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Livraria.TelaCadastro">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />



        <Label Text="Informe os dados do autor:" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>

        <Entry x:Name="nomeAutorEntry" Placeholder="Nome do Autor" Margin="20"
               />
        <Entry x:Name="emailAutorEntry" Placeholder="Email do Autor" Margin="20"/>
        <Entry x:Name="inbsEntry" Placeholder="INBS" Margin="20"/>

        <Button Text="Registrar" Clicked="OnRegistrarClicked" HorizontalOptions="Center" Margin="20"/>
    </VerticalStackLayout>
</ContentView>
